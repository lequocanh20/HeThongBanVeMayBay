@model IEnumerable<HeThongBanVeMayBay.Models.VECHUYENBAY>

@{
    ViewBag.Title = "TRANG CHỦ VÉ CHUYẾN BAY";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TRANG CHỦ VÉ CHUYẾN BAY</h2>

<p>
    @Html.ActionLink("Đặt vé", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDVeChuyenBay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDChuyenBay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CMND)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaTien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiVe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDVeChuyenBay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IDChuyenBay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CMND)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaTien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiVe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @using (Html.BeginForm("Cancle", "FlightTicket", new { madatcho = item.IDVeChuyenBay }, FormMethod.Post))
            {
                if (item.Status == "Active")
                {
                    <input type="submit" value="Hủy vé" />
                }
                else
                {
                }
            }
            @Html.ActionLink("Chi tiết", "Details", new { id = item.IDVeChuyenBay })
        </td>
    </tr>
}

</table>
