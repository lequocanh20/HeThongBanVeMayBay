@model IEnumerable<HeThongBanVeMayBay.Models.MAYBAY>

@{
    ViewBag.Title = "Trang chủ máy bay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TRANG CHỦ MÁY BAY</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDMayBay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoDangBa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiMayBay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HangBay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SucChuaToiDa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDMayBay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDangBa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiMayBay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HANGBAY1.TenHangbay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SucChuaToiDa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status) 
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID })
            </td>
        </tr>
    }

</table>
