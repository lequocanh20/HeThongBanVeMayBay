@model IEnumerable<HeThongBanVeMayBay.Models.SANBAY>

@{
    ViewBag.Title = "Trang chủ sân bay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TRANG CHỦ SÂN BAY</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IATA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenSB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IATA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID })
            </td>
        </tr>
    }

</table>
