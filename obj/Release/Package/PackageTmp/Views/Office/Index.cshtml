@model IEnumerable<HeThongBanVeMayBay.Models.CHUCVU>

@{
    ViewBag.Title = "Trang chủ thông tin chức vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TRANG CHỦ THÔNG TIN CHỨC VỤ</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDChucVu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenChucVu)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDChucVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenChucVu)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
            </td>
        </tr>
    }

</table>
